<launch>
  <arg name="start_time"/>
  <arg name="scene"/>

  <arg name="map_size_x_"/>
  <arg name="map_size_y_"/>
  <arg name="map_size_z_"/>

  <arg name="sdf_resolution"/>
  <arg name="sdf_max_ray_length"/>

  <arg name="use_fuel_planner"/>
  <arg name="use_real_env"/>
  <arg name="use_init_motion"/>

  <arg name="use_namespace"/>

  <arg name="use_sequence_cost"/>

  <arg name="planner_dim"/>
  
  <arg name="init_x"/>
  <arg name="init_y"/>
  <arg name="init_z"/>

  <arg name="box_min_x"/>
  <arg name="box_min_y"/>
  <arg name="box_min_z"/>
  <arg name="box_max_x"/>
  <arg name="box_max_y"/>
  <arg name="box_max_z"/>

  <arg name="map_min_x"/>
  <arg name="map_min_y"/>
  <arg name="map_min_z"/>
  <arg name="map_max_x"/>
  <arg name="map_max_y"/>
  <arg name="map_max_z"/>

  <arg name="odometry_topic"/>
  <arg name="sensor_pose_topic"/>
  <arg name="depth_topic"/>
  <arg name="cloud_topic"/>

  <arg name="cx"/>
  <arg name="cy"/>
  <arg name="fx"/>
  <arg name="fy"/>

  <arg name="max_vel"/>
  <arg name="max_acc"/>

  <!-- main node -->
  <!-- <node pkg="exploration_manager" name="exploration_node" type="exploration_node" output="screen"> -->
  <node pkg="exploration_manager" name="exploration_node" type="exploration_node">
    <remap from ="/odom_world" to="$(arg odometry_topic)"/>
    <remap from ="/map_ros/pose"   to = "$(arg sensor_pose_topic)"/> 
    <remap from ="/map_ros/depth" to = "$(arg depth_topic)"/>
    <remap from ="/map_ros/cloud" to="$(arg cloud_topic)"/>
    <remap from ="/map_ros/odom" to="$(arg odometry_topic)"/>
    <remap from ="/traj_waypoints" to = "/planning/traj_waypoints"/>
    <remap from ="/end_time" to = "/planning/end_time"/>
    
    <!-- data analysis -->
    <param name="analysis/start_time" value="$(arg start_time)" type = "string"/>
    <param name="analysis/scene" value="$(arg scene)" type = "string"/>
    
    <!-- preprocess -->
    <rosparam if="$(eval planner_dim == 3)" file="$(find active_perception)/resources/config_new_virtual_cave.yaml" command="load"/>
    <rosparam if="$(eval planner_dim == 2)" file="$(find active_perception)/resources/config_new_virtual_cave.yaml" command="load"/>

    <param name="fael_exploration/init_motion_enable" value="false"/>
    <param name="fael_exploration/init_x" value="$(arg init_x)"/>
    <param name="fael_exploration/init_y" value="$(arg init_y)"/>
    <param name="fael_exploration/init_z" value="$(arg init_z)"/>
    <param name="fael_exploration/max_vel" value="$(arg max_vel)" />
    <param name="fael_exploration/replan_too_long_thre" value="1.0"/>
    <param name="fael_exploration/local_replan_periodic_thre" value="1.5"/>
    <param name="fael_exploration/global_replan_periodic_thre" value="2.5"/>

    <!-- path_execution -->
    <remap from="/odometry" to="$(arg odometry_topic)"/>
    <remap from="/goal" to="/move_base_simple/goal"/>
    <param name="path_execution/stop_vel_thres" value="0.05"/>
    <param name="path_execution/stop_rot_thres" value="0.09"/>
    <param name="path_execution/init_z" value="$(arg init_z)"/>
    <param name="path_execution/local_path_dist" value="5.0"/>
    
    <param name="sdf_map/resolution"      value="$(arg sdf_resolution)" /> 
    <param name="sdf_map/map_size_x"   value="$(arg map_size_x_)" /> 
    <param name="sdf_map/map_size_y"   value="$(arg map_size_y_)" /> 
    <param name="sdf_map/map_size_z"   value="$(arg map_size_z_)" /> 
    <!-- <param name="sdf_map/obstacles_inflation"     value="0.099" />  -->
    <param name="sdf_map/obstacles_inflation"     value="0.499" /> 
    <param name="sdf_map/local_bound_inflate"    value="0.1"/>
    <param name="sdf_map/local_map_margin" value="50"/>
    <param name="sdf_map/ground_height"        value="-140.0"/>
    <param name="sdf_map/default_dist"        value="0.0"/>
    
    <!-- <param name="sdf_map/p_hit"  value="0.99"/>
    <param name="sdf_map/p_miss" value="0.49"/>
    <param name="sdf_map/p_min"  value="0.12"/>
    <param name="sdf_map/p_max"  value="0.90"/>
    <param name="sdf_map/p_occ"  value="0.80"/> -->

    <param name="sdf_map/p_hit"  value="0.90"/>
    <param name="sdf_map/p_miss" value="0.05"/>
    <param name="sdf_map/p_min"  value="0.12"/>
    <param name="sdf_map/p_max"  value="0.90"/>
    <param name="sdf_map/p_occ"  value="0.80"/>

    <param name="sdf_map/min_ray_length" value="0.5"/>
    <param name="sdf_map/max_ray_length" value="$(arg sdf_max_ray_length)"/>
    <param name="sdf_map/virtual_ceil_height"   value="-10"/>
    <param name="sdf_map/optimistic" value="false" type="bool"/>
    <param name="sdf_map/signed_dist" value="false" type="bool"/>
    <param name="sdf_map/box_min_x" value="$(arg box_min_x)" type="double"/>
    <param name="sdf_map/box_min_y" value="$(arg box_min_y)" type="double"/>
    <param name="sdf_map/box_min_z" value="$(arg box_min_z)" type="double"/>
    <param name="sdf_map/box_max_x" value="$(arg box_max_x)" type="double"/>
    <param name="sdf_map/box_max_y" value="$(arg box_max_y)" type="double"/>
    <param name="sdf_map/box_max_z" value="$(arg box_max_z)" type="double"/>

    <param name="sdf_map/map_min_x" value="$(arg map_min_x)" type="double"/>
    <param name="sdf_map/map_min_y" value="$(arg map_min_y)" type="double"/>
    <param name="sdf_map/map_min_z" value="$(arg map_min_z)" type="double"/>
    <param name="sdf_map/map_max_x" value="$(arg map_max_x)" type="double"/>
    <param name="sdf_map/map_max_y" value="$(arg map_max_y)" type="double"/>
    <param name="sdf_map/map_max_z" value="$(arg map_max_z)" type="double"/>

    <param name="map_ros/cx" value="$(arg cx)"/>
    <param name="map_ros/cy" value="$(arg cy)"/>
    <param name="map_ros/fx" value="$(arg fx)"/>
    <param name="map_ros/fy" value="$(arg fy)"/>
    <param name="map_ros/depth_filter_maxdist"   value="10.0"/>
    <param name="map_ros/depth_filter_mindist"   value="0.2"/>
    <param name="map_ros/depth_filter_margin"    value="2"/>
    <param name="map_ros/k_depth_scaling_factor" value="1000.0"/>
    <param name="map_ros/skip_pixel" value="2"/>
    <param name="map_ros/esdf_slice_height" value="30.0"/>
    <param name="map_ros/visualization_truncate_height"   value="200.0"/>
    <param name="map_ros/visualization_truncate_low"   value="-200.0"/>
    <param name="map_ros/show_occ_time"  value="false"/>
    <param name="map_ros/show_esdf_time" value="false"/>
    <param name="map_ros/show_all_map" value="false"/>
    <param name="map_ros/frame_id"      value="world"/>

    <!-- Fsm -->
    <!-- 轨迹结束时间阈值 -->
    <param name="fsm/thresh_replan1" value="1.3" type="double"/>
    <!-- frontier覆盖检测时间阈值 -->
    <param name="fsm/thresh_replan2" value="1.3" type="double"/>
    <!-- 局部重规划时间阈值 -->
    <param name="fsm/thresh_replan3" value="1.5" type="double"/>
    <!-- 聚类参数 -->
    <!-- 11.0 6.0-->
    
    <!-- <param name="frontier/surface_frontier_cluster_min" value="2" type="int"/> for 0.6 resolution -->
    <param name="frontier/surface_frontier_cluster_min" value="3" type="int"/>
    <param name="frontier/min_visib_num" value="6" type="int"/>
    
    <!-- <param name="frontier/cluster_size_xyz" value="11.0" type="double"/>  -->
    <param name="frontier/cluster_size_xyz" value="8.5" type="double"/> 
    <param name="frontier/angle_thres" value="360.0" type="double"/> 
   
    <param name="frontier/use_normal_vector" value="false" type="bool"/>
    <param name="frontier/find_path_twice" value="false" type="bool"/>
    <!-- 视点采样参数 -->
    <param name="frontier/candidate_rnum" value="3" type="int"/>
    <param name="frontier/candidate_rmin" value="2.0" type="double"/>
    <param name="frontier/candidate_rmax" value="7.0" type="double"/>
    <param name="frontier/candidate_theta" value="80.0" type="double"/>
    <param name="frontier/obstacle_dist" value="1.0" type="double"/>
    <!-- <param name="frontier/min_visib_num" value="6" type="int"/>; for 0.6 resolution -->
    
    <!-- 全局规划参数 -->
    <param name="exploration/w_dir" value="3.0" type="double"/>
    <param name="frontier/min_view_finish_fraction" value="0.5" type="double"/>
    <param name="exploration/vm" value="$(eval 1.0 * arg('max_vel'))" type="double"/>
    
    <!-- 20.0 0.2 dir_w 4.0   ground场景中 5.0 和 2.0/1.0 也不错 -->
    <param name="exploration/total_sequence_cost" value="7.0" type="double"/>
    <param name="exploration/single_sequence_cost" value="3.0" type="double"/>
    <param name="exploration/use_sequence_cost" value="$(arg use_sequence_cost)" type="bool"/>
    <param name="exploration/use_velocity_estimate" value="false" type="bool"/>
    <param name="exploration/use_local_refine" value="false" type="bool"/>
    
    <!-- publish参数 -->
    <param name="frontier/use_namespace" value="$(arg use_namespace)" type="bool"/>

    <!-- <param name="fsm/thresh_replan1" value="0.00001" type="double"/> -->
    <!-- <param name="fsm/thresh_replan2" value="100.0" type="double"/> -->
    <!-- <param name="fsm/thresh_replan3" value="0.1" type="double"/> -->
    <param name="fsm/replan_time" value="0.200" type="double"/>
    <param name="fsm/use_init_motion" value="$(arg use_init_motion)" type="bool"/>
    <param name="fsm/show_road_map" value="false" type="bool"/>
    <!-- Exploration manager -->
    <param name="exploration/use_fuel_planner" value="$(arg use_fuel_planner)" type="bool"/>

    <param name="exploration/init_x" value="$(arg init_x)" type="double"/>
    <param name="exploration/init_y" value="$(arg init_y)" type="double"/>
    <param name="exploration/init_z" value="$(arg init_z)" type="double"/>
    <param name="exploration/refine_local" value="true" type="bool"/>
    <param name="exploration/refined_num" value="7" type="int"/>
    <param name="exploration/refined_radius" value="5.0" type="double"/>
    <param name="exploration/max_decay" value="0.8" type="double"/>
    <param name="exploration/top_view_num" value="15" type="int"/>

    <param name="exploration/am" value="$(eval 1.0 * arg('max_acc'))" type="double"/>
    <param name="exploration/yd" value="$(eval 60 * 3.1415926 / 180.0)" type="double"/>
    <param name="exploration/ydd" value="$(eval 90 * 3.1415926 / 180.0)" type="double"/>
    <param name="exploration/tsp_dir" value="$(find lkh_tsp_solver)/resource" type="string"/>
    <param name="exploration/relax_time" value="1.0" type="double"/>

    <param name="frontier/disable_simple_finder" value="false" type="bool"/>
    <param name="frontier/cluster_min" value="100" type="int"/>
    
    <param name="frontier/cluster_size_z" value="10.0" type="double"/>
    <param name="frontier/min_candidate_dist" value="0.75" type="double"/>
    <param name="frontier/min_candidate_clearance" value="0.21" type="double"/>
    <param name="frontier/candidate_dphi" value="$(eval 15 * 3.1415926 / 180.0)" type="double"/>

    <param name="frontier/down_sample" value="3" type="int"/>;
    
    
    <param name="frontier/frontier_global_ub" value="60" type="double" />
    <param name="frontier/frontier_global_lb" value="-20" type="double" />
    <!-- <param name="frontier/frontier_local_ub" value="3.0" type="double" if="$(eval planner_dim == 3)"/> -->
    <!-- <param name="frontier/frontier_local_lb" value="-3.0" type="double" if="$(eval planner_dim == 3)"/> -->
    <param name="frontier/frontier_local_ub" value="3.0" type="double" if="$(eval planner_dim == 3)"/>
    <param name="frontier/frontier_local_lb" value="-3.0" type="double" if="$(eval planner_dim == 3)"/>
    <param name="frontier/frontier_local_ub" value="0.3" type="double" if="$(eval planner_dim == 2)"/>
    <param name="frontier/frontier_local_lb" value="-0.3" type="double" if="$(eval planner_dim == 2)"/>
    <!-- <param name="frontier/frontier_local_ub" value="0.4" type="double" if="$(eval planner_dim == 2)"/> -->
    <!-- <param name="frontier/frontier_local_lb" value="-0.4" type="double" if="$(eval planner_dim == 2)"/> -->
    

    <param name="frontier/surface_frontier_cluster_distance" value="1.2" type="double"/>

    <param name="frontier/sensor_height" value="0.0" type="double"/>

    <param name="frontier/obstacle_cluster_min" value="10" type="int"/>

    <param name="frontier/viewpoint_check" value="false" type="bool"/>
    
    <!-- Perception utils -->
    <param name="perception_utils/top_angle" value="0.56125" type="double"/>;
    <param name="perception_utils/left_angle" value="0.69222" type="double"/>;
    <param name="perception_utils/right_angle" value="0.68901" type="double"/>;
    <param name="perception_utils/max_dist" value="4.5" type="double"/>;
    <param name="perception_utils/vis_dist" value="1.0" type="double"/>;


    <param name="heading_planner/yaw_diff" value="$(eval 30 * 3.1415926 / 180.0)" type="double"/>
    <param name="heading_planner/half_vert_num" value="5" type="int"/>
    <param name="heading_planner/lambda1" value="2.0" type="double"/>
    <param name="heading_planner/lambda2" value="1.0" type="double"/>
    <param name="heading_planner/max_yaw_rate" value="$(eval 10 * 3.1415926 / 180.0)" type="double"/>
    <param name="heading_planner/w" value="20000.0" type="double"/>
    <param name="heading_planner/weight_type" value="1" type="double"/>

  <!-- planner manager -->
    <!-- <param name="manager/max_vel" value="$(arg max_vel)" type="double"/> -->
    <param name="manager/planner_dim" value="$(arg planner_dim)"/>
    <param name="manager/max_vel" value="$(arg max_vel)" type="double"/>
    <param name="manager/max_acc" value="$(arg max_acc)" type="double"/>
    <param name="manager/max_jerk" value="4" type="double"/>
    <param name="manager/dynamic_environment" value="0" type="int"/>
    <param name="manager/local_segment_length" value="6.0" type="double"/>
    <param name="manager/clearance_threshold" value="0.2" type="double"/>
    <param name="manager/control_points_distance" value="0.5" type="double"/>
    <param name="manager/use_geometric_path" value="true" type="bool"/>
    <param name="manager/use_kinodynamic_path" value="true" type="bool"/>
    <param name="manager/use_topo_path" value="false" type="bool"/>
    <param name="manager/use_optimization" value="true" type="bool"/>
    <param name="manager/use_active_perception" value="true" type="bool"/>
    <param name="manager/min_time" value="true" type="bool"/>

  <!-- kinodynamic path searching -->
    <param name="search/max_tau" value="0.6" type="double"/>
    <param name="search/init_max_tau" value="0.8" type="double"/>
    <param name="search/max_vel" value="$(arg max_vel)" type="double"/>
    <param name="search/vel_margin" value="0.25" type="double"/>
    <param name="search/max_acc" value="$(arg max_acc)" type="double"/>
    <param name="search/w_time" value="10.0" type="double"/>
    <param name="search/horizon" value="7.0" type="double"/>
    <param name="search/lambda_heu" value="10.0" type="double"/>
    <param name="search/resolution_astar" value="0.1" type="double"/>
    <param name="search/time_resolution" value="0.8" type="double"/>
    <param name="search/margin" value="0.2" type="double"/>
    <param name="search/allocate_num" value="100000" type="int"/>
    <param name="search/check_num" value="5" type="int"/>
    <param name="search/optimistic" value="false" type="bool"/>

    <param name="astar/lambda_heu" value="10000.0" type="double"/>
    <param name="astar/resolution_astar" value="0.5" type="double"/>
    <param name="astar/allocate_num" value="1000000" type="int"/>
    <param name="astar/max_search_time" value="0.02" type="double"/>

  <!-- trajectory optimization -->
    <param name="optimization/ld_smooth" value="20.0" type="double"/>
    <param name="optimization/ld_dist" value="10.0" type="double"/>
    <param name="optimization/ld_feasi" value="2.0" type="double"/>
    <param name="optimization/ld_start" value="100.0" type="double"/>
    <param name="optimization/ld_end" value="0.5" type="double"/>
    <param name="optimization/ld_guide" value="1.5" type="double"/>
    <param name="optimization/ld_waypt" value="0.3" type="double"/>
    <param name="optimization/ld_view" value="0.0" type="double"/>
    <param name="optimization/ld_time" value="1.0" type="double"/>
    <param name="optimization/dist0" value="0.7" type="double"/>
    <param name="optimization/max_vel" value="$(arg max_vel)" type="double"/>
    <param name="optimization/max_acc" value="$(arg max_acc)" type="double"/>
    <param name="optimization/algorithm1" value="15" type="int"/>
    <param name="optimization/algorithm2" value="11" type="int"/>
    <param name="optimization/max_iteration_num1" value="2" type="int"/>
    <param name="optimization/max_iteration_num2" value="2000" type="int"/>
    <param name="optimization/max_iteration_num3" value="200" type="int"/>
    <param name="optimization/max_iteration_num4" value="200" type="int"/>

    <param name="optimization/max_iteration_time1" value="0.0001" type="double"/>
    <param name="optimization/max_iteration_time2" value="0.005" type="double"/>
    <param name="optimization/max_iteration_time3" value="0.003" type="double"/>
    <param name="optimization/max_iteration_time4" value="0.003" type="double"/>
    <param name="bspline/limit_vel" value="$(arg max_vel)" type="double"/>
    <param name="bspline/limit_acc" value="$(arg max_acc)" type="double"/>
    <param name="bspline/limit_ratio" value="1.1" type="double"/>
    <param name="bspline/limit_vel" value="$(arg max_vel)" type="double"/>
    <param name="bspline/limit_acc" value="$(arg max_acc)" type="double"/>
    <param name="bspline/limit_ratio" value="1.1" type="double"/>



  </node>

</launch>